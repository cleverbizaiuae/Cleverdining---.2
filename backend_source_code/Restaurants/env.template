# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Set USE_SQLITE=True for local development with SQLite
# Set USE_SQLITE=False for production with PostgreSQL
USE_SQLITE=False

# PostgreSQL Database (required if USE_SQLITE=False)
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=your_database_host
DB_PORT=5432

# Redis Configuration (optional - for WebSocket channels)
# Leave empty or set to 'localhost' to use in-memory channel layer
REDIS_HOST=

# Email Configuration (for password reset, chef/staff invitations)
EMAIL=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Media Files
MEDIA_URL=/media/

# Stripe Payment Configuration (optional)
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# VAPI Configuration (optional - for voice assistant)
VAPI_API=your_vapi_api_key

# Render.com Configuration (only needed on Render deployment)
RENDER_EXTERNAL_HOSTNAME=

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

